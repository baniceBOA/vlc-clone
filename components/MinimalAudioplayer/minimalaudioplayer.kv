<MinimalAudioplayer>:
    adaptive_size:True
    MDRelativeLayout:
        md_bg_color:'orange' if app.theme_cls.theme_style == 'Light' else 'black'
        size_hint:(None, None)
        size:(dp(400), dp(40))
        MDProgressBar:
            id:progressbar
            pos_hint:{'top':1}
            md_bg_color:'green' if app.theme_cls.theme_style == 'Light' else 'black'
        MDBoxLayout:
            adaptive_size:True
            pos_hint:{'center_y':0.5}
            md_bg_color:'white'
            ScrollView:
                do_scroll_y:False
                MDLabel:
                    id:animated_label
                    text:root.filename
                    size_hint_x:None
                    width:dp(300)
                    size_hint_y:None
                    height:dp(20)
                    text_size:(self.width, self.height)
        MDIconButton:
            pos_hint:{'center_x':0.9,'center_y':0.5}
            icon:'play'
            on_release:root.animate_label()
