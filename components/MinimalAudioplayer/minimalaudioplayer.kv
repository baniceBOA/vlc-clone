<MinimalAudioPlayer>:
    min_player_btn:min_player_btn
    size_hint_y:None
    height:dp(64)
    MDRelativeLayout:
        md_bg_color:'white' if app.theme_cls.theme_style == 'Light' else 'gray'
        
        MDProgressBar:
            id:min_player_progressbar
            value:10
            size_hint_y:None
            height:dp(8)
            pos_hint:{'top':1}
            padding:[dp(8), 0 , dp(8), 0]
        MDLabel:
            id:animated_label
            padding:[dp(8), 0 , 0, 0]
            pos_hint:{'left':1,'center_y':0.5}
            text:root.name
            size_hint_x:None
            width:dp(300)
            size_hint_y:None
            height:dp(20)
            font_size:dp(12)
            shorten:True
        MDLabel:
            text:root.length
            pos_hint:{'center_x':0.85,'center_y':0.5}
            size_hint_x:None
            width:dp(50)
            size_hint_y:None
            height:dp(20)
            font_size:dp(12)

        MDIconButton:
            id:min_player_btn
            pos_hint:{'right':1,'center_y':0.5}
            icon:'pause-circle-outline'
