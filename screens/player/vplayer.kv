
<Player>:
    MDRelativeLayout:
        md_bg_color:'white' if app.theme_cls.theme_style == 'Light' else 'black'
        Video:
            id:video
            source:root.source
            play:False
            
        MDTopAppBar:
            title:root.title
            pos_hint:{'top':1}
            md_bg_color:app.theme_cls.bg_darkest
        MDBoxLayout:
            md_bg_color:[0,0,0,0.5]
            size_hint_y:None
            height:video.height*0.1
            pos_hint:{'bottom':0.9}
            MDRelativeLayout:
                MDLabel:
                    text:root.time_duration
                    font_size:dp(16)
                    pos_hint:{'x':0.85, 'center_y':0.85}
                MDSlider:
                    id:video_progressbar
                    pos_hint:{'center_x':0.4, 'center_y':0.9}
                    size_hint_x:None
                    width:video.width*0.7
                    on_touch_move:root.seek_video(video_progressbar.value)
                
                MDIconButton:
                    icon:'step-backward'
                    pos_hint:{'center_x':0.3, 'center_y':0.5}
                MDIconButton:
                    icon:'play'
                    pos_hint:{'center_x':0.5, 'center_y':0.5}
                    on_release:root.play_video(self)
                MDIconButton:
                    icon:'step-forward'
                    pos_hint:{'center_x':0.7, 'center_y':0.5}
                